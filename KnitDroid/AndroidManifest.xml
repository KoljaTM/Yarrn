            android:name="de.vanmar.android.knitdroid.MainActivity_"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.vanmar.android.knitdroid.ravelry.GetAccessTokenActivity_"
            android:label="@string/app_name" >
        </activity>
